<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= @site.title %> <%= @document.title || @site.description %></title>
    <link rel="shortcut icon" href="favicon.ico" />
    <meta charset="utf-8" />
    <%- @getBlock("meta").toHTML() %>
    <%- @getBlock("styles").add(["/styles/index.css"]).toHTML() %>
  </head>
  <body>
    <%- @partial("fork.html") %>
    <nav role="navigation">
    <%- @partial("menu.html.eco", { menuItems: @generateMenu(@document.url) }) %>
    </nav>
    <%- @content %>
    <%- @getBlock("scripts").add("/scripts/index.js").toHTML() %>
    <%- @partial("footer.html.hb") %>
  </body>
</html>
