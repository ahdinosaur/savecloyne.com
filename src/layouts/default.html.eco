<!DOCTYPE html>
<html lang="en">
  <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb#">
    <title><%= @document.title %></title>
    <link rel="shortcut icon" href="favicon.ico" />
    <meta charset="utf-8" />
    <%- @getBlock("meta").toHTML() %>
    <%- @getBlock("styles").add(["/styles/index.css"]).toHTML() %>
    <!-- For sharing on Facebook -->
    <meta property="og:title" content="<%= @site.title %>" /> 
    <meta property="og:url" content="http://www.savecloyne.com" /> 
    <meta property="og:image" content="images/clologo.jpg" /> 
    <meta property="og:site_name" content="SaveCloyne.com" /> 
    <meta property="og:description" content="<%= @site.description %>" />
  </head>
  <body>
    <%- @partial("fork.html") %>
    <nav role="navigation">
    <%- @partial("menu.html.eco", { menuItems: @generateMenu(@document.url) }) %>
    </nav>
    <%- @content %>
    <%- @getBlock("scripts").add("/scripts/index.js").toHTML() %>
    <%- @partial("footer.html.hb") %>
  </body>
</html>
