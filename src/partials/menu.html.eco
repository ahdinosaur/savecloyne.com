<% renderMenu = (items) => %>
<ul class="ui large menu">
  <% for item in items: %>
  <li class="<% if item.state: %>active <% end %><%= item.meta.color %> item">
    <a href="<%= item.url %>">
      <i class="<%= item.meta.icon %> icon"></i>
      <%= item.title %>
      <% if item.children: %>
        <%- renderMenu(item.children) %>
      <% end %>
    </a>
  </li>
  <% end %>
</ul>
<% end %>
<%= renderMenu @menuItems %>
